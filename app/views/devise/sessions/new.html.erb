<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center">Log in</h2>
      <div class="row">
        <div class="col-md-12">

    <%= form_for(resource, as: resource_name, :html => {class:" form-horizontal", role: "form"},
                          url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group row">
          <div class="col-form-label col-3">
            <%= f.label :email %>
          </div>
          <div class="col-9">
            <%= f.email_field :email, class:"form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-form-label col-3">
            <%= f.label :password %>
          </div>

          <div class="col-9">
            <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
        </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group row">
          <div class="control-label col-9 offset-md-3">
            <div class="check_box">
              <label>
                <%= f.check_box :remember_me %>
                Remember me
              </label>
            </div>

          </div>
        </div>
      <% end -%>

            <div class="form-group actions">
              <div class="col-9 offset-md-3">
                  <%= f.submit "Log in" ,class: "btn btn-primary btn-block"%>
              </div>

            </div>
          <% end %>
          <div class="form-group">
            <div class="col-9">
              <%= render "devise/shared/links" %>
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>
</div>
