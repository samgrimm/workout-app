<div class="row">
  <div class="col-md-12">
    <%= form_for([current_user,@exercise ], :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if @exercise.errors.any? %>
        <div class="panel panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:
            </h2>
            <div class="panel-body">
              <ul>
                <% @exercise.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end%>
      <div class="form-group row">
        <div class="control-label col-1">
          <%= f.label :duration_in_min%>
        </div>
        <div class="col-11">
          <%= f.number_field :duration_in_min, class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="control-label col-1">
          <%= f.label :workout , "Workout Details"%>
        </div>
        <div class="col-md-11">
          <%= f.text_area :workout, class:"form-control", rows: 10, placeholder: 'What did you do today?' %>
        </div>
      </div>

      <div class="form-group row">
        <div class="control-label col-1">
          <%= f.label :workout_date , "Activity Date"%>
        </div>
        <div class="col-md-11">
          <%= f.date_field :workout_date, class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-md-1 col-11">
          <%= f.submit class:"btn btn-primary btn-lg pull-right" %>
        </div>
      </div>

    <% end %>
  </div>
</div>
