<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>My Lounge</h1>
      <div class="actions">
        <%= link_to "New Workout", new_user_exercise_path(current_user), class:"btn btn-primary" %>
      </div>
    </div>
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Workout</th>
            <th>Duration (min)</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @exercises.each do |exercise| %>
          <tr>
            <th scope="row"><%= exercise.workout_date%></th>
            <td><%= truncate(exercise.workout, length: 50)%></td>
            <td><%= exercise.duration_in_min%></td>
            <td><%= link_to 'Show', [current_user, exercise]%></td>
            <td><%= link_to 'Edit', [:edit, current_user, exercise]%></td>
            <td><%= link_to 'Delete', [current_user, exercise], method: :delete, data: {confirm: "Are you sure?"}%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
